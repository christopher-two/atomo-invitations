---
import Layout from "../../templates/festive/Layout.astro";
---

<Layout title="Festive Invitation">
    <main>
        <h1>Festive Invitation</h1>
        <p>This is the festive design proposal.</p>
        <button class="btn-festive">I'm going!</button>
    </main>
</Layout>

<style>
    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        text-align: center;
    }
    .btn-festive {
        padding: 1rem 2rem;
        background: var(--color-accent);
        color: white;
        border: none;
        border-radius: 50px;
        font-size: 1.2rem;
        cursor: pointer;
    }
</style>
