---
const { invitation, profile } = Astro.props;
---

<!-- 3. DETALLES / EL PLAN -->
<section class="mb-16 md:mb-24 relative max-w-3xl mx-auto">
    <svg
        class="sparkle -left-8 md:-left-16 top-0 w-6 h-6 md:w-10 md:h-10"
        viewBox="0 0 24 24"
        style="animation-delay: 0.5s;"
        ><path
            d="M12 0L13.5 8.5L22 10L13.5 11.5L12 20L10.5 11.5L2 10L10.5 8.5L12 0Z"
            class="svg-pink"></path>
    </svg>

    <h2
        class="marker-font text-3xl md:text-5xl text-[var(--charcoal)] mb-6 transform -rotate-1 text-center md:text-left"
    >
        <span
            class="theme-text"
            data-light="El Plan:"
            data-dark="Agenda:"
            data-emerald="Cronograma:"
            data-rose="Itinerario:"
            data-gold="Programa:">El Plan:</span
        >
    </h2>
    <ul class="text-2xl md:text-3xl space-y-4 leading-relaxed md:ml-8">
        <li>
            <span class="text-[var(--pink-main)] font-bold">7:00 PM</span> - <span
                class="theme-text"
                data-light="Pre-copa y chisme"
                data-dark="Llegada y Recepción"
                data-emerald="Ceremonia"
                data-rose="Bienvenida"
                data-gold="Cóctel de Bienvenida">Pre-copa y chisme</span
            >
            <i
                class="theme-icon fa-solid fa-champagne-glasses text-[var(--pink-main)] ml-2"
                data-light="fa-solid fa-champagne-glasses"
                data-dark="fa-solid fa-martini-glass"
                data-emerald="fa-solid fa-dove"
                data-rose="fa-solid fa-heart"
                data-gold="fa-solid fa-wine-glass"
                data-current-icon-class="fa-solid fa-champagne-glasses"></i>
        </li>
        <li>
            <span class="text-[var(--pink-main)] font-bold">9:00 PM</span> - <span
                class="theme-text"
                data-light="Juegos y sorpresas"
                data-dark="Cena de Gala"
                data-emerald="Banquete Especial"
                data-rose="Cena y Brindis"
                data-gold="Banquete Principal">Juegos y sorpresas</span
            >
            <i
                class="theme-icon fa-solid fa-dice text-[var(--pink-main)] ml-2"
                data-light="fa-solid fa-dice"
                data-dark="fa-solid fa-utensils"
                data-emerald="fa-solid fa-camera"
                data-rose="fa-solid fa-cake-candles"
                data-gold="fa-solid fa-music"
                data-current-icon-class="fa-solid fa-dice"></i>
        </li>
        <li>
            <span class="text-[var(--pink-main)] font-bold">11:00 PM</span> - <span
                class="theme-text"
                data-light="A la pista de baile"
                data-dark="Apertura de Pista"
                data-emerald="Fiesta y Baile"
                data-rose="A festejar"
                data-gold="Baile de Honor">A la pista de baile</span
            >
            <i
                class="theme-icon fa-solid fa-music text-[var(--pink-main)] ml-2"
                data-light="fa-solid fa-music"
                data-dark="fa-solid fa-compact-disc"
                data-emerald="fa-solid fa-record-vinyl"
                data-rose="fa-solid fa-gift"
                data-gold="fa-solid fa-star"
                data-current-icon-class="fa-solid fa-music"></i>
        </li>
    </ul>
    <div class="mt-10 text-center">
        <span
            class="marker-highlight text-2xl md:text-4xl font-bold px-4 py-2 inline-flex items-center gap-2"
            ><span
                class="theme-text"
                data-light="Dress Code: ¡TODO ROSA!"
                data-dark="Dress Code: Formal Evening"
                data-emerald="Dress Code: Elegante / Verde"
                data-rose="Dress Code: Tonos Pastel"
                data-gold="Dress Code: Etiqueta Rigurosa"
                >Dress Code: ¡TODO ROSA!</span
            >
            <i
                class="theme-icon fa-solid fa-ribbon ml-2 mt-1"
                data-light="fa-solid fa-ribbon"
                data-dark="fa-solid fa-user-tie"
                data-emerald="fa-solid fa-leaf"
                data-rose="fa-solid fa-spa"
                data-gold="fa-solid fa-crown"
                data-current-icon-class="fa-solid fa-ribbon"></i>
        </span>
    </div>
</section>
