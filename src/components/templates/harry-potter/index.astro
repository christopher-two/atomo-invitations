---
import Layout from "./Layout.astro";
import Hero from "./organisms/Hero.astro";
import Countdown from "./organisms/Countdown.astro";
import Location from "./organisms/Location.astro";
import Dresscode from "./organisms/Dresscode.astro";
import Map from "./organisms/Map.astro";
import RSVP from "./organisms/RSVP.astro";

const { invitation, profile } = Astro.props;
const customData = invitation?.custom_data || {};

const pageTitle =
    invitation?.title || "Fiesta de Disfraces | Invitación Mágica";
---

<Layout title={pageTitle}>
    <div class="hp-content-layer">
        <Hero invitation={invitation} profile={profile} />
        <Countdown invitation={invitation} />
        <Location invitation={invitation} />
        <Dresscode invitation={invitation} />
        <Map invitation={invitation} />
        <RSVP invitation={invitation} profile={profile} />
    </div>
</Layout>

<style>
    .hp-content-layer {
        /* Encapsula todo el contenido por encima del mapa animado */
        position: relative;
        z-index: 10;
        width: 100%;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
</style>
