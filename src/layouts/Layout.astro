---
import SEO from "../components/SEO.astro";

interface Props {
	title?: string;
	description?: string;
}

const {
	title = "√Åtomo Invitations",
	description = "Plantillas de invitaciones modernas y elegantes.",
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO title={title} description={description} />
	</head>
	<body>
		<slot />
		<style is:global>
			html,
			body {
				margin: 0;
				padding: 0;
				width: 100%;
				min-height: 100vh;
				box-sizing: border-box;
			}

			*,
			*::before,
			*::after {
				box-sizing: inherit;
			}
		</style>
	</body>
</html>
