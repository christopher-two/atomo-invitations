<!-- 4. VIBE CHECK (Galería Polaroid) -->
<section class="mb-16 md:mb-24">
    <h2
        class="marker-font text-3xl md:text-5xl text-[var(--pink-main)] mb-8 transform rotate-2 text-center"
    >
        Nuestra Vibra
    </h2>
    <div
        class="flex flex-wrap justify-center gap-6 md:gap-12 pb-12 pt-8 px-2 w-full"
    >
        <!-- Polaroid 1 -->
        <div
            class="polaroid snap-center shrink-0 p-2 md:p-4 bg-[var(--bg-card)] shadow-md transform"
            style="--rot: -4; transform: rotate(calc(var(--rot) * 1deg));"
        >
            <div
                class="tape md:w-16 w-10 mx-auto -mt-4 bg-[var(--tape-bg)] backdrop-blur-sm shadow-sm h-3 relative z-10 mb-2"
            >
            </div>
            <div
                class="w-36 h-36 md:w-56 md:h-56 bg-gray-200 border border-gray-300 flex items-center justify-center text-gray-400 overflow-hidden"
            >
                <img
                    src="https://images.unsplash.com/photo-1527529482837-4698179dc6ce?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                    alt="Vibra 1"
                    class="object-cover w-full h-full grayscale hover:grayscale-0 transition duration-300"
                />
            </div>
            <p
                class="text-center mt-3 md:mt-4 marker-font text-sm md:text-2xl text-[var(--charcoal)]"
            >
                ¡Salud!
            </p>
        </div>
        <!-- Polaroid 2 -->
        <div
            class="polaroid snap-center shrink-0 p-2 md:p-4 bg-[var(--bg-card)] shadow-md transform"
            style="--rot: 3; transform: rotate(calc(var(--rot) * 1deg));"
        >
            <div
                class="tape md:w-16 w-10 mx-auto -mt-4 bg-[var(--tape-bg)] backdrop-blur-sm shadow-sm h-3 relative z-10 mb-2"
            >
            </div>
            <div
                class="w-36 h-36 md:w-56 md:h-56 bg-gray-200 border border-gray-300 flex items-center justify-center text-gray-400 overflow-hidden"
            >
                <img
                    src="https://images.unsplash.com/photo-1529333166437-7750a6dd5a70?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                    alt="Vibra 2"
                    class="object-cover w-full h-full grayscale hover:grayscale-0 transition duration-300"
                />
            </div>
            <p
                class="text-center mt-3 md:mt-4 marker-font text-sm md:text-2xl text-[var(--pink-main)]"
            >
                BFFs
            </p>
        </div>
        <!-- Polaroid 3 -->
        <div
            class="polaroid snap-center shrink-0 p-2 md:p-4 bg-[var(--bg-card)] shadow-md transform"
            style="--rot: -2; transform: rotate(calc(var(--rot) * 1deg));"
        >
            <div
                class="tape md:w-16 w-10 mx-auto -mt-4 bg-[var(--tape-bg)] backdrop-blur-sm shadow-sm h-3 relative z-10 mb-2"
            >
            </div>
            <div
                class="w-36 h-36 md:w-56 md:h-56 bg-gray-200 border border-gray-300 flex items-center justify-center text-gray-400 overflow-hidden"
            >
                <img
                    src="https://images.unsplash.com/photo-1514525253161-7a46d19cd819?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80"
                    alt="Vibra 3"
                    class="object-cover w-full h-full grayscale hover:grayscale-0 transition duration-300"
                />
            </div>
            <p
                class="text-center mt-3 md:mt-4 marker-font text-sm md:text-2xl text-[var(--charcoal)]"
            >
                Mood
            </p>
        </div>
    </div>
</section>
