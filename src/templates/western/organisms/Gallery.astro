<section class="gallery-section">
    <div class="gallery-container">
        <!-- 3 vertical photos requested -->
        <div class="photo-wrapper">
            <img
                src="https://images.unsplash.com/photo-1510414696678-2415ad8474aa?q=80&w=600&auto=format&fit=crop"
                alt="Pareja 1"
                class="gallery-img"
                loading="lazy"
            />
        </div>
        <div class="photo-wrapper">
            <img
                src="https://images.unsplash.com/photo-1542603837-97d83dd2cf1e?q=80&w=600&auto=format&fit=crop"
                alt="Pareja 2"
                class="gallery-img"
                loading="lazy"
            />
        </div>
        <div class="photo-wrapper">
            <img
                src="https://images.unsplash.com/photo-1605371802554-0cd3a270dbb5?q=80&w=600&auto=format&fit=crop"
                alt="Pareja 3"
                class="gallery-img"
                loading="lazy"
            />
        </div>
    </div>
</section>

<style>
    .gallery-section {
        padding: 4rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        box-sizing: border-box;
    }

    .gallery-container {
        display: flex;
        flex-direction: column; /* Mobile first */
        gap: 3rem;
        width: 100%;
        max-width: 900px; /* Wider for PC */
    }

    @media (min-width: 768px) {
        .gallery-container {
            flex-direction: row; /* Horizontal on PC */
            justify-content: center;
        }
    }

    .photo-wrapper {
        position: relative;
        width: 100%;
        /* Aspect ratio vertical */
        aspect-ratio: 4 / 5;

        /* The requested irregular brown border simulating torn paper or thick pencil */
        border: 4px solid var(--ink-color);
        border-radius: 255px 15px 225px 15px/15px 225px 15px 255px;
        overflow: hidden;

        /* Soft shadow for depth against the parchment */
        box-shadow: 4px 6px 0px rgba(90, 51, 21, 0.15);
        transform: rotate(-1deg);
        transition: transform 0.3s ease;
    }

    /* Slight alternating rotations for an organic stacked photos feel */
    .photo-wrapper:nth-child(even) {
        transform: rotate(1.5deg);
    }

    @media (min-width: 768px) {
        /* On PC, slightly more rotation adds characteristic */
        .photo-wrapper:nth-child(1) {
            transform: rotate(-3deg);
        }
        .photo-wrapper:nth-child(2) {
            transform: translateY(20px) rotate(2deg);
        }
        .photo-wrapper:nth-child(3) {
            transform: rotate(-1deg);
        }
    }

    .photo-wrapper:hover {
        transform: scale(1.05) rotate(0deg); /* Slightly more pop on PC */
        z-index: 10;
    }

    .gallery-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        /* The specific requested sepia filter */
        filter: grayscale(100%) sepia(30%);
        transition: filter 0.3s ease;
    }

    /* Optional: reveal true colors on interaction if desired, but spec says sepia to not break magic. We'll leave it always sepia or maybe slightly ease */
</style>
