---
// Hero.astro
import hatSvg from "../assets/hat.svg";
import horseshoeSvg from "../assets/horseshoe.svg";
import cactusSvg from "../assets/cactus.svg";
---

<section class="hero-section">
    <!-- Hat illustration entering from top left -->
    <img src={hatSvg.src} alt="Sombrero vaquero" class="sketch-hat" />

    <div class="hero-content">
        <p class="text-script intro-text">Estás invitado a nuestra</p>

        <h1 class="main-title">DINNER PARTY</h1>

        <!-- Horseshoe sketch -->
        <div class="separator-icon">
            <img src={horseshoeSvg.src} alt="Herradura" class="sketch-icon" />
        </div>

        <p class="date-text">SÁBADO 19 DE JUNIO</p>
    </div>

    <!-- Cactus illustration emerging from bottom right -->
    <img src={cactusSvg.src} alt="Cactus" class="sketch-cactus" />
</section>

<style>
    .hero-section {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
        padding: 2rem;
        /* Abundant white space (UI Espacial) */
        box-sizing: border-box;
    }

    .sketch-hat {
        position: absolute;
        top: 2rem;
        left: 0; /* Align closer to safe area */
        width: clamp(
            140px,
            25vw,
            220px
        ); /* Dramatically increased for mobile */
        transform: rotate(-15deg); /* Slight angle looks more natural */
        opacity: 0.9;
        /* Fallback filter if real SVG isn't sepia */
        filter: sepia(100%) hue-rotate(340deg) saturate(150%) contrast(150%)
            brightness(50%);
    }

    .sketch-cactus {
        position: absolute;
        bottom: 2rem;
        right: 1rem;
        width: clamp(
            120px,
            20vw,
            180px
        ); /* Dramatically increased for mobile */
        opacity: 0.9;
        filter: sepia(100%) hue-rotate(340deg) saturate(150%) contrast(150%)
            brightness(50%);
    }

    .hero-content {
        z-index: 1;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .intro-text {
        font-size: clamp(2rem, 3vw, 3rem);
        margin: 0;
    }

    .main-title {
        font-size: clamp(3.5rem, 12vw, 8rem); /* Scale up massively on PC */
        line-height: 1;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
    }

    .separator-icon {
        margin: 1.5rem 0;
        width: clamp(120px, 15vw, 160px); /* Massively increased width */
        height: clamp(120px, 15vw, 160px); /* Massively increased height */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .sketch-icon {
        width: 100%;
        height: 100%;
        filter: sepia(100%) hue-rotate(340deg) saturate(150%) contrast(150%)
            brightness(50%);
    }

    .date-text {
        font-weight: 500;
        font-size: clamp(1.1rem, 2vw, 1.5rem);
        letter-spacing: 0.15em;
    }
</style>
