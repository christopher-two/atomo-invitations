<section class="hero-section">
    <!-- SVGs Botánicos (Definiciones Reutilizables) -->
    <svg class="botanical-defs">
        <defs>
            <g id="hoja-eucalipto" fill="none" stroke="#4A5D4E" stroke-width="1.5">
                <path d="M0,50 Q20,20 50,0 Q60,30 30,60 Q10,70 0,50 Z" fill="#4A5D4E" fill-opacity="0.1"/>
                <path d="M0,50 Q20,20 50,0" />
                <path d="M25,25 Q35,15 45,5" />
                <path d="M30,35 Q45,25 60,15" fill="#4A5D4E" fill-opacity="0.2"/>
                <path d="M15,45 Q30,50 45,60" />
            </g>
        </defs>
    </svg>

    <!-- Decoración top -->
    <svg class="botanical-decoration top-left" viewBox="0 0 100 100">
        <use href="#hoja-eucalipto" x="10" y="10" transform="rotate(-30 50 50) scale(1.2)" />
        <use href="#hoja-eucalipto" x="-10" y="40" transform="rotate(-60 50 50) scale(0.8)" />
    </svg>
    <svg class="botanical-decoration top-right" viewBox="0 0 100 100">
        <use href="#hoja-eucalipto" x="10" y="10" transform="rotate(30 50 50) scale(1.2)" />
        <use href="#hoja-eucalipto" x="-10" y="40" transform="rotate(60 50 50) scale(0.8)" />
    </svg>

    <p class="invitation-text">CON GRAN ALEGRÍA TE INVITAMOS A NUESTRA BODA</p>
    
    <div class="hero-image-container">
        <img 
            src="https://images.unsplash.com/photo-1606800052052-a08af7148866?ixlib=rb-4.0.3&auto=format&fit=crop&w=1600&q=80" 
            alt="Anna y Aaron" 
            class="hero-image"
        />
        <div class="image-gradient"></div>
        
        <!-- Fecha Superpuesta -->
        <h2 class="hero-date">
            20 . 03 . 26
        </h2>
    </div>

    <h1 class="couple-names">Juan & Karla</h1>
</section>

<style>
    .hero-section {
        position: relative;
        padding-top: 4rem;
        padding-bottom: 5rem;
        padding-left: 1.5rem;
        padding-right: 1.5rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .botanical-defs {
        display: none;
    }

    .botanical-decoration {
        position: absolute;
        top: 0;
        width: 8rem;
        height: 8rem;
        opacity: 0.8;
        pointer-events: none;
    }

    .top-left {
        left: 0;
        transform: scale(-1, 1);
    }

    .top-right {
        right: 0;
    }

    .invitation-text {
        font-family: var(--font-sans);
        font-size: 0.65rem;
        letter-spacing: 0.25em;
        color: var(--color-carbon);
        margin-bottom: 2rem;
        z-index: 10;
        margin-top: 2rem;
        text-align: center;
    }

    .hero-image-container {
        position: relative;
        width: 100%;
        max-width: 60rem;
        height: 55vh;
        margin-bottom: 3rem;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: grayscale(20%) sepia(10%);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    .image-gradient {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(to top, rgba(0, 0, 0, 0.5), transparent);
    }

    .hero-date {
        position: absolute;
        bottom: -2rem;
        width: 100%;
        font-family: var(--font-serif);
        font-size: 3.75rem;
        color: var(--color-white);
        letter-spacing: 0.15em;
        text-shadow: 2px 2px 15px rgba(0, 0, 0, 0.4);
        text-align: center;
    }

    .couple-names {
        font-family: var(--font-script);
        font-size: 4.5rem;
        color: var(--color-verde);
        margin-top: 4rem;
        text-align: center;
    }

    @media (min-width: 768px) {
        .hero-section {
            padding-top: 4rem;
            padding-bottom: 5rem;
            padding-left: 1.5rem;
            padding-right: 1.5rem;
        }

        .botanical-decoration {
            width: 12rem;
            height: 12rem;
        }

        .invitation-text {
            font-size: 0.875rem;
        }

        .hero-image-container {
            height: 75vh;
        }

        .hero-date {
            bottom: -3rem;
            font-size: 6rem;
        }

        .couple-names {
            font-size: 6rem;
            margin-top: 4rem;
        }
    }

    @media (min-width: 1024px) {
        .hero-date {
            font-size: 9rem;
        }

        .couple-names {
            font-size: 9rem;
        }
    }
</style>
